{
  "extends": "airbnb-base",
  "env": {
     "es6": true,
     "browser": true,
     "jest": true
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-new": 0,
    "class-methods-use-this": [
      "error", { 
        "exceptMethods": ["createWindow", "chargePopUp"] 
      }
    ]
  }
}